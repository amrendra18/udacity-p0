<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorSplashBackground"
    tools:context=".SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TextView
            android:id="@+id/heading_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/my_app"
            android:textStyle="bold"
            android:textSize="@dimen/app_title_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/splash_screen_layout_margin">


        <Button
            android:id="@+id/spotify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSplashButtonBackground"
            android:padding="@dimen/splash_button_padding"
            android:layout_marginBottom="@dimen/splash_button_margin"
            android:text="@string/spotify_app"/>

        <Button
            android:id="@+id/score_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSplashButtonBackground"
            android:padding="@dimen/splash_button_padding"
            android:layout_marginBottom="@dimen/splash_button_margin"
            android:text="@string/score_app"/>

        <Button
            android:id="@+id/library_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSplashButtonBackground"
            android:padding="@dimen/splash_button_padding"
            android:layout_marginBottom="@dimen/splash_button_margin"
            android:text="@string/library_app"/>

        <Button
            android:id="@+id/build_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSplashButtonBackground"
            android:padding="@dimen/splash_button_padding"
            android:layout_marginBottom="@dimen/splash_button_margin"
            android:text="@string/build_app"/>

        <Button
            android:id="@+id/reader_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSplashButtonBackground"
            android:padding="@dimen/splash_button_padding"
            android:layout_marginBottom="@dimen/splash_button_margin"
            android:text="@string/reader_app"/>

        <Button
            android:id="@+id/capstone_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSplashButtonSpecialBackground"
            android:padding="@dimen/splash_button_padding"
            android:layout_marginBottom="@dimen/splash_button_margin"
            android:textColor="@color/white"
            android:text="@string/capstone_app"/>
    </LinearLayout>

</LinearLayout>
